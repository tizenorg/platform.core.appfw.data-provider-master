<manifest>
	<!-- Provider master label -->
	<define>
		<domain name="data-provider-master" policy="restricted" />
		<provide>
			<label name="data-provider-master::bin" />
			<label name="data-provider-master::log" />
			<label name="data-provider-master::db" />
			<label name="data-provider-master::data" />
		</provide>
	</define>
	<request>
		<domain name="_" />
	</request>

	<assign>
		<!-- Executable file -->
		<filesystem path="/usr/bin/data-provider-master" label="data-provider-master::bin" />
		<filesystem path="/usr/bin/data-provider-master" exec_label="data-provider-master::bin" />

		<filesystem path="/usr/bin/liveinfo" label="data-provider-master::bin" />
		<filesystem path="/usr/bin/liveinfo" exec_label="data-provider-master::bin" />

		<!-- Configuration data -->
		<filesystem path="/usr/share/data-provider-master" label="data-provider-master::data" />
		<filesystem path="/usr/share/data-provider-master/abi.ini" label="data-provider-master::data" />

		<!-- Package manager & Init script -->
		<filesystem path="/etc/rc.d/init.d/data-provider-master" label="_" />

		<!-- Package manager plugin -->
		<filesystem path="/usr/etc/package-manager/parserlib/liblivebox.so" label="_" />
	</assign>
</manifest>
